nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
        //- if you want you may use the font awesome icon instead
        //- i.fa.fa-lg.fa-bars
      a.navbar-brand(href='/') Express Starter App
    .collapse.navbar-collapse
      if user
        ul.nav.navbar-nav

          li.dropdown(class=url=='/apiopen'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-fw.fa-laptop
              | &nbsp;Case Resources&nbsp;
              b.caret
            ul.dropdown-menu
              li
                a(href='https://mail.google.com')
                  i.fa.fa-fw.fa-envelope-open
                  | &nbsp;Email
              li
                a(href='https://caseconsulting.tsheets.com')
                  i.fa.fa-fw.fa-clock-o
                  | &nbsp;Timesheets
              li
                a(href='https://3.basecamp.com/3097063/projects')
                  i.fa.fa-fw.fa-clock-o
                  | &nbsp;Basecamp
              li
                a(href='/api/facebook')
                  i.fa.fa-fw.fa-linkedin
                  | &nbsp;LinkedIn
              li
                a(href='/api/facebook')
                  i.fa.fa-fw.fa-facebook
                  | &nbsp;Facebook
              li
                a(href='/api/github')
                  i.fa.fa-fw.fa-github
                  | &nbsp;GitHub
              li
                a(href='/api/twitter')
                  i.fa.fa-fw.fa-lock
                  | &nbsp;Twitter
        //- Right side
        ul.nav.navbar-nav.navbar-right

          //- Visible to Admin users only!
          if user.type == 'admin'
            li.dropdown(class=url=='/administration'?'active':undefined)
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-fw.fa-cogs
                | &nbsp;Admin&nbsp;
                b.caret
              ul.dropdown-menu
                li
                  a(href='/dashboard')
                    i.fa.fa-fw.fa-laptop
                    | &nbsp;Dashboard
                li
                  a(href='/accounts')
                    i.fa.fa-fw.fa-users
                    | &nbsp;Accounts

          //- User account
          li.dropdown(class=url=='/account'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img.profile-image(src='#{user.profile.picture}')
              else
                img.profile-image(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              b.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  i.fa.fa-fw.fa-user
                  | &nbsp;My Account
              li
                a(href='/contact')
                  i.fa.fa-fw.fa-envelope-o
                  | &nbsp;Contact Us
              li.divider
              li
                a(href='/logout')
                  i.fa.fa-fw.fa-sign-out
                  | &nbsp;Logout

      else
        //- No user/not logged in
        ul.nav.navbar-nav.navbar-right
          li(class=url=='/login'?'active':undefined)
            a(href='/login')
              i.fa.fa-sign-in.fa-fw
              | &nbsp;Sign In

